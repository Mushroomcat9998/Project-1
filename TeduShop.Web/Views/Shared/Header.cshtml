@using Microsoft.AspNet.Identity;
<div class="header">
    <div class="top-header">
        <div class="container">

            @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogout" }))
            {
                if (Request.IsAuthenticated)
                {
                    @Html.AntiForgeryToken()
                    <ul class="login">
                        <li><a href="/tai-khoan.html"><span> </span>Xin chào: @User.Identity.GetUserName()</a></li> |
                        <li><a href="#" id="btnLogout">Thoát</a></li>
                    </ul>
                }
                else
                {
                    <ul class="support">
                        <li class="van"><a href="#"><label> </label></a></li>
                        <li><p style="color:white">Giao hàng toàn quốc </p></li>
                    </ul>
                    <ul class="support">
                        <li><a href="#"><label> </label></a></li>
                        <li><a href="/lien-he.html">Liên hệ</a></li>
                    </ul>
                    <ul class="login">
                        <li><a href="/dang-nhap.html">ĐĂNG NHẬP |</a></li>
                        <li><a href="/admin">ĐĂNG NHẬP CHO ADMIN |</a></li>
                        <li><a href="/dang-ky.html">ĐĂNG KÝ</a></li>
                        <li><a href="/gio-hang.html"><span> </span>GIỎ HÀNG</a></li>
                    </ul>
                }
            }
            <div class="clearfix"> </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>

    <div class="bottom-header">
        <div class="container">
            <div class="logo">
                <a href="/"><img src="/Assets/client/images/logo1.png" alt="" /></a>
            </div>

            <div class="search">
                <form method="get" action="/tim-kiem.html">
                    <input type="text" id="txtKeyword" name="keyword" placeholder="Từ khóa">
                    <input type="submit" value="Tìm kiếm" id="btnSearch">
                </form>
            </div>

            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>